<%- include('partials/head.ejs'); %>
<link rel="stylesheet" href="/assets/styles/index.css">
<title>Zoológico - Update</title>
</head>

<body>
    <main role="main">
        <%- include('partials/navbar.ejs'); %>
        <div class="container">
            <% if (tabela == 'Ala') { %> 
            <form method='POST' action="/atualizaAla/">
                <input type="hidden" name="alaId">
                <div class="form-group">
                    <label for="cod">Código</label>
                    <input type="number" id="cod" name="cod" value= "<%= elem.elem0.id %>" readonly>
                </div>
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" value= "<%= elem.elem0.nome %>" >
                </div>
                <div class="form-group">
                    <label for="localizacao">Localização</label>
                    <input type="text" id="localizacao" name="localizacao" value="<%= elem.elem0.localizacao %>">
                </div>
                <!-- Horarios ala -->
                <div class="form-group">
                    <label for="horario">Horário</label>
                    <input type="time" id="horario" name="horario" value= "<%= elem.elem1.horario %>" >
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Animal') { %>
                <input type="hidden" name="animalId">
            <form method='POST' action="/atualizaAnimal">
                <div class="form-group">
                    <label for="cod">Código</label>
                    <input type="number" id="cod" name="cod" value= "<%= elem.id %>" readonly>
                </div>
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" value= "<%= elem.nome %>">
                </div>
                <div class="form-group">
                    <label for="sexo">Sexo</label>
                    <select type="text" id="sexo" name="sexo" value= "<%= elem.sexo %>">
                        <option value="M">M</option>
                        <option value="F">F</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="dataNascimento">Data de Nascimento</label>
                    <input type="date" id="dataNascimento" name="dataNascimento" value= "<%= elem.dataNascimento %>" >
                </div>
                <div class="form-group">
                    <label for="codEspecie">Código da Espécie</label>
                    <input type="text" id="codEspecie" name="codEspecie" value= <%= elem.especieId %>>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Atende') { %>
            <form method='POST' action="/atualizaAtende">         
                <div class="form-group">
                    <label for="veterinarioCPF">CPF</label>
                    <input type="number" id="veterinarioCPF" name="veterinarioCPF" value= "<%= elem.veterinarioCPF %>">
                </div>
                <div class="form-group">
                    <label for="codAnimal">Código do Animal</label>
                    <input type="number" id="codAnimal" name="codAnimal" value= "<%= elem.animalId %>">
                </div>
                <div class="form-group">
                    <label for="data">Data</label>
                    <input type="date" id="data" name="data" value= "<%= elem.data %>">
                </div>
                <div class="form-group">
                    <label for="diagnostico">Diagnostico</label>
                    <textarea type="text" id="diagnostico" name="diagnostico" value= "<%= elem.diagnostico %>"></textarea>
                </div>
                

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Bilheteria') { %>
            <form method='POST' action="/atualizaBilheteria">
                <input type="hidden" name="bilheteriaId">
                <div class="form-group">
                    <label for="numBilheteria">Número Bilheteria</label>
                    <input type="number" id="numBilheteria" name="numBilheteria" value= <%= elem.id %> readonly>
                </div>
                <div class="form-group">
                    <label for="localizacao">Localização</label>
                    <input type="text" id="localizacao" name="localizacao" value= <%= elem.Localizacao %>>
                </div>

                <!--Horario Bilheteria-->
                <div class="form-group">
                    <label for="horarioInicio">Horário Início</label>
                    <input type="time" id="horarioInicio" name="horarioInicio" value= <%= elem.horarioInicio %>>
                </div>
                <div class="form-group">
                    <label for="horarioFinal">Horário Final</label>
                    <input type="time" id="horarioFinal" name="horarioFinal" value= <%= elem.horarioFinal %>>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Especie') { %>
            <form method='POST' action="/atualizaEspecie">
                <input type="hidden" name="especieId">
                <div class="form-group">
                    <label for="codEspecie">Código da Espécie</label>
                    <input type="number" id="codEspecie" name="codEspecie" value= "<%= elem.id %>" readonly>
                </div>
                <div class="form-group">
                    <label for="nomeCientifico">Nome Cientifico</label>
                    <input type="text" id="nomeCientifico" name="nomeCientifico" value= "<%= elem.nomeCientifico %>">
                </div>
                <div class="form-group">
                    <label for="nomePopular">Nome Popular</label>
                    <input type="text" id="nomePopular" name="nomePopular" value= "<%= elem.nomePopular %>">
                </div>
                <div class="form-group">
                    <label for="estado">Estado de Conservação</label>
                    <select type="text" id="estado" name="estado" value= "<%= elem.estado %>">
                        <option value="LC">LC</option>
                        <option value="NT">NT</option>
                        <option value="VU">VU</option>
                        <option value="EN">EN</option>
                        <option value="CR">CR</option>
                        <option value="EW">EW</option>
                        <option value="EX">EX</option>
                        <option value="DD">DD</option>
                        <option value="NE">NE</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="alimentacao">Alimentação</label>
                    <textarea type="text" id="alimentacao" name="alimentacao" value= "<%= elem.alimentacao %>"></textarea>
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea type="text" id="descricao" name="descricao" value= "<%= elem.descricao %>" ></textarea>
                </div>
                <div class="form-group">
                    <label for="codAla">Código da Ala</label>
                    <input type="text" id="codAla" name="codAla" value= "<%= elem.alaId %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'ServicosGerais') { %>
            <form method='POST' action="/atualizaServicosGerais">

                <%- include('partials/funcionario_update.ejs');  %>

                <div class="form-group">
                    <label for="funcao">Função</label>
                    <select type="text" id="funcao" name="funcao" value= <%= elem.elem0.funcao %>>
                        <option value="Segurança">Segurança</option>
                        <option value="Limpeza">Limpeza</option>
                    </select>
                </div>
                <!--Trabalha-->
                <div class="form-group">
                    <label for="codAla">Código Ala</label>
                    <input type="number" id="codAla" name="codAla" value= <%= elem.elem1.alaId %>>
                </div>
                <div class="form-group">
                    <label for="horarioInicio">Horário Início</label>
                    <input type="time" id="horarioInicio" name="horarioInicio" value= <%= elem.elem1.horarioInicio %>>
                </div>
                <div class="form-group">
                    <label for="horarioFinal">Horário Final</label>
                    <input type="time" id="horarioFinal" name="horarioFinal" value= <%= elem.elem1.horarioFinal %>>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Veterinario') { %>
            <form method='POST' action="/atualizaVeterinario">

                <%- include('partials/funcionario_form.ejs');  %>

                <div class="form-group">
                    <label for="CRMV">CRMV</label>
                    <input type="number" id="CRMV" name="CRMV" value= <%= CRMV %>>
                </div>
                <div class="form-group">
                    <label for="faculdade">Faculdade</label>
                    <input type="text" id="faculdade" name="faculdade" value= <%= faculdade %>>
                </div>

                <!-- Supervisiona -->
                <div class="form-group">
                    <label for="codEspecie">Código Especie</label>
                    <input type="number" id="codEspecie" name="codEspecie" value= <%= especieId %>>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Bilheteiro') { %>
            <form method='POST' action="/atualizaBilheteiro">

                <%- include('partials/funcionario_form.ejs');  %>

                <!--Cuida-->
                <div class="form-group">
                    <label for="numBilheteria">Número Bilheteria</label>
                    <input type="number" id="numBilheteria" name="numBilheteria" value= <%= bilheteriaId %>>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Ingresso') { %>
            <form method='POST' action="/atualizaIngresso">
                <div class="form-group">
                    <label for="num">Número</label>
                    <input type="number" id="num" name="num" value= <%= elem.id %> readonly>
                </div>
                <div class="form-group">
                    <label for="preco">Preço</label>
                    <input type="number" id="preco" name="preco" value= '<%= elem.preco %>'>
                </div>
                <div class="form-group">
                    <label for="horario">Data e Horário da compra</label>
                    <input type="text" id="horario" name="horario" value= '<%= elem.createdAt %> 'readonly>
                </div>
                
                <div class="form-group">
                    <label for="numBilheteria">Número Bilheteria</label>
                    <input type="number" id="numBilheteria" name="numBilheteria" value= <%= elem.bilheteriaId %>>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>
        </div>
    </main>


</body>
<%- include('partials/foot.ejs'); %>
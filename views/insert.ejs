<%- include('partials/head.ejs'); %>
<link rel="stylesheet" href="/assets/styles/index.css">
<title>Zoológico - Home</title>
</head>

<body>
    <main role="main">
        <%- include('partials/navbar.ejs'); %>

        <div class="container mt-5">
            <% if (tabela == 'Ala') { %>
            <form method='POST' action="/insert/horarioAla">

                <div class="form-group">
                    <label for="cod">Nome</label>
                    <input type="text" id="nome" name="nome" required>
                </div>
                <div class="form-group">
                    <label for="cod">Localização</label>
                    <input type="text" id="localizacao" name="localizacao" required>
                </div>
                <button type="submit" class="btn btn-primary">Continuar</button>
            </form>
            <% } %>

            <% if (tabela == 'Animal') { %>
            <form method='POST' action="/insereAnimal">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" required>
                </div>
                <div class="form-group">
                    <label for="sexo">Sexo</label>
                    <select type="text" id="sexo" name="sexo" required>
                        <option value="M">M</option>
                        <option value="F">F</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="dataNascimento">Data de Nascimento</label>
                    <input type="date" id="dataNascimento" name="dataNascimento" required>
                </div>
                <div class="form-group">
                    <label for="codEspecie">Espécie</label>
                    <select name="codEspecie" id="codEspecie" required>
                        <% resultado.forEach(r => { %>
                        <option value=<%= r.id %>> <%=r.nomeCientifico %> </option>
                        <% }) %>

                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Atende') { %>
            <form method='POST' action="/insereAtende">
                <div class="form-group">
                    <label for="CPF">CPF</label>
                    <input type="number" id="CPF" name="CPF" required>
                </div>
                <div class="form-group">
                    <label for="codAnimal">Código do Animal</label>
                    <input type="number" id="codAnimal" name="codAnimal" required>
                </div>
                <div class="form-group">
                    <label for="data">Data</label>
                    <input type="date" id="data" name="data" required>
                </div>
                <div class="form-group">
                    <label for="diagnostico">Diagnostico</label>
                    <textarea type="text" id="diagnostico" name="diagnostico" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Bilheteria') { %>
            <form method='POST' action="/insert/horarioBilheteria">

                <div class="form-group">
                    <label for="localizacao">Localização</label>
                    <input type="text" id="localizacao" name="localizacao" required>
                </div>

                <button type="submit" class="btn btn-primary">Continuar</button>
            </form>
            <% } %>

            <% if (tabela == 'Especie') { %>
            <form method='POST' action="/insereEspecie">

                <div class="form-group">
                    <label for="nomeCientifico">Nome Cientifico</label>
                    <input type="text" id="nomeCientifico" name="nomeCientifico" required>
                </div>
                <div class="form-group">
                    <label for="nomePopular">Nome Popular</label>
                    <input type="text" id="nomePopular" name="nomePopular" required>
                </div>
                <div class="form-group">
                    <label for="estado">Estado de Conservação</label>
                    <select type="text" id="estado" name="estado" required>
                        <option value="LC">LC</option>
                        <option value="NT">NT</option>
                        <option value="VU">VU</option>
                        <option value="EN">EN</option>
                        <option value="CR">CR</option>
                        <option value="EW">EW</option>
                        <option value="EX">EX</option>
                        <option value="DD">DD</option>
                        <option value="NE">NE</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="alimentacao">Alimentação</label>
                    <textarea type="text" id="alimentacao" name="alimentacao" required></textarea>
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea type="text" id="descricao" name="descricao" required></textarea>
                </div>
                <div class="form-group">
                    <label for="codAla">Ala</label>
                    <select name="codAla" id="codAla" required>

                        <% resultado.forEach(r => { %>
                        <option value="<%= r.id %>"> <%= r.nome %> </option>
                        <% }) %>

                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'ServicosGerais') { %>
            <form method='POST' action="/insert/horarioSG">

                <%- include('partials/funcionario_form.ejs');  %>

                <div class="form-group">
                    <label for="funcao">Função</label>
                    <select type="text" id="funcao" name="funcao" onchange="setSelected(this.value)" required>
                        <option value="Segurança">Segurança</option>
                        <option value="Limpeza">Limpeza</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Continuar</button>
            </form>
            <% } %>

            <% if (tabela == 'Veterinario') { %>
            <form method='POST' action="/insereVeterinario">

                <%- include('partials/funcionario_form.ejs');  %>

                <div class="form-group">
                    <label for="CRMV">CRMV</label>
                    <input type="number" id="CRMV" name="CRMV" required>
                </div>
                <div class="form-group">
                    <label for="faculdade">Faculdade</label>
                    <input type="text" id="faculdade" name="faculdade" required>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>

            <% if (tabela == 'Bilheteiro') { %>
            <form method='POST' action="/insereBilheteiro">

                <%- include('partials/funcionario_form.ejs');  %>
                <div class="form-group">
                    <label for="numBilheteria">Número Bilheteria</label>
                    <input type="number" id="numBilheteria" name="numBilheteria" required>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>

            </form>
            <% } %>

            <% if (tabela == 'Ingresso') { %>
            <form method='POST' action="/insereIngresso">

                <div class="form-group">
                    <label for="preco">Preço</label>
                    <input type="number" id="preco" name="preco" step=any required>
                </div>

                <div class="form-group">
                    <label for="numBilheteria">Número Bilheteria</label>
                    <input type="number" id="numBilheteria" name="numBilheteria" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>
        </div>

    </main>
